{
    "name": "terraform-plan",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:bullseye@sha256:9eaf697f7c24fe78b1029f401e770387d865b5c187c9733572af8eecbbafe896",
    "features": {
        "node": {
            "version": "20.7.0",
            "nodeGypDependencies": true
        },
        "terraform": {
            "version": "latest",
            "tflint": "none",
            "terragrunt": "latest"
        },
        "github-cli": "latest"
    },
    "mounts": [
        "source=${env:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=/run/host-services/ssh-auth.sock,target=/run/host-services/ssh-auth.sock,type=bind,consistency=cached"
    ],
    "containerEnv": {
        "SHELL": "/bin/zsh",
        "SSH_AUTH_SOCK": "/run/host-services/ssh-auth.sock"
    },
    "settings": {
        "[javascript]": {
            "editor.formatOnSave": true
        },
        "[terraform]": {
            "editor.formatOnSave": true
        }
    },
    "extensions": [
        "dbaeumer.vscode-eslint",
        "redhat.vscode-yaml",
        "timonwong.shellcheck",
        "hashicorp.terraform",
        "github.copilot",
        "orta.vscode-jest"
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "sudo .devcontainer/post-create-command.sh"
}